@model MobileStore.Models.ApplicationUser

@{
    ViewData["Title"] = "Xóa nhân viên";
}

<div class="row">
    <div class=" col-lg-8">
        <div class="card">
            <div class="card-header">
                <strong>Xóa nhân viên</strong>
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Email)</label>
                    <div class="col-md-8">
                        <div class="form-control">

                            @Model.Email
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.FirstName)</label>
                    <div class="col-md-8">
                        <div class="form-control">

                            @Model.FirstName
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.LastName)</label>
                    <div class="col-md-8">
                        <div class="form-control">

                            @Model.LastName
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 form-control-label" for="select">@Html.DisplayNameFor(model => model.Role)</label>
                    <div class="col-md-8">
                        <div class="form-control">

                            @Model.Role
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Birthday)</label>
                    <div class="col-md-8">
                        <div class="form-control">

                            @Model.Birthday
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Phone)</label>
                    <div class="col-md-8">
                        <div class="form-control">

                            @Model.Phone
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Address)</label>
                    <div class="col-md-8">
                        <div class="form-control">

                            @Model.Address
                        </div>
                    </div>
                </div>


            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o"></i> Tiếp tục xóa?</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index"><button type="button" class="btn btn-success"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}





    
  
