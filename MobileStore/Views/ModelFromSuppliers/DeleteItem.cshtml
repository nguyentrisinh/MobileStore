@model MobileStore.Models.Item
@using MobileStore.Models

@{
    ViewData["Title"] = "EditItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card">

                <div class="card-header">
                    <strong>Xóa sản phẩm</strong>
                </div>
                <div class="card-body">

                    <div class="form-group row">
                        <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Name)</label>
                        <div class="col-md-8">
                            
                            <div class="form-control">
                                @Model.Name
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.IMEI)</label>
                        <div class="col-md-8">
                            
                            <div class="form-control">
                                @Model.IMEI
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.SerializerNumber)</label>
                        <div class="col-md-8">

                            <div class="form-control">
                                @Model.SerializerNumber  
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Note)</label>
                        <div class="col-md-8">

                            <div class="form-control">
                                @Model.Note
                            </div>
                        </div>
                    </div>





                    <div class="form-group row">

                        <label class="col-md-4 form-control-label" > @Html.DisplayNameFor(model => model.Status)</label>
                        <div class="col-md-8">

                            <div class="form-control">
                                @Model.Status
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-4 form-control-label" asp-for="ModelID" class="control-label">@Html.DisplayNameFor(model => model.ModelID)</label>
                        <div class="col-md-8">
                            
                            <div class="form-control">
                                @Model.Model.Name
                            </div>
                        </div>
                    </div>



                </div>
            <div class="card-footer">
                <form asp-action="DeleteItem">
                    <input hidden asp-for="ItemID"/>
                    <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o"></i> Tiếp tục xóa?</button>
                </form>
            </div>
        </div>





    </div>
</div>

<div>
    <a asp-action="Edit" asp-controller="ModelFromSuppliers" asp-route-id="@Model.ModelFromSupplierID"><button type="button" class="btn btn-success"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
