@model IEnumerable<MobileStore.Models.ModelFromSupplier>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PriceBought)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PriceSold)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceBought)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceSold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model.ModelID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.SupplierID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ModelFromSupplierID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ModelFromSupplierID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ModelFromSupplierID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
