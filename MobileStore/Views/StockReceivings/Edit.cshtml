@model MobileStore.Models.StockReceiving
@using MobileStore.Models

@{
    ViewData["Title"] = "Sửa đơn nhập hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class=" col-lg-8">
        <div class="card">
            <form asp-action="Edit">
                <div class="card-header">
                    <strong>Sửa đơn hàng</strong>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="StockReceivingID" />
                   

                    <div class="form-group row">
                        <label asp-for="SupplierID" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.SupplierID)</label>
                        <div class="col-md-8">
                            <select class="form-control" asp-for="SupplierID" class="form-control" asp-items="@(new SelectList(ViewBag.SupplierID,"SupplierID","Name",Model.SupplierID))"></select>
                            <span asp-validation-for="SupplierID" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-warning"><i class="fa fa-pencil-square-o"></i> Sửa</button>
                    @*<div class="form-group">
                            <input type="submit" value="Create" class="btn btn-default"/>
                        </div>*@
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index"><button type="button" class="btn btn-success"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}