@model MobileStore.Models.Customer

@{
    ViewData["Title"] = "Thông tin khách hàng";
}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
                <div class="card-header">
                    <strong>Thông tin khách hàng</strong>
                </div>

                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-md-3 form-control-label">Tên khách hàng</label>
                        <div class="col-md-9">
                            <div class="form-control">
                                @Model.Name
                            </div>
                            </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 form-control-label">Địa chỉ</label>
                        <div class="col-md-9">
                            <div class="form-control">
                                @Model.Address
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 form-control-label">Ngày sinh</label>
                        <div class="col-md-9">
                            <div class="form-control">
                                @Model.Birthday
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 form-control-label">Quốc gia</label>
                        <div class="col-md-9">
                            <div class="form-control">
                                @Model.Country
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 form-control-label">Giới tính</label>
                        <div class="col-md-9">
                            <div class="form-control">
                                @Model.Gender
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-3 form-control-label">Số điện thoại</label>
                        <div class="col-md-9">
                            <div class="form-control">
                                @Model.Phone
                            </div>
                        </div>
                    </div>



                </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index"><button type="button" class="btn btn-primary"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
