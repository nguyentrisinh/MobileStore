@model MobileStore.Models.WarrantyDetail

@{
    ViewData["Title"] = "Create";
    var date = DateTime.Now.ToShortDateString();
}

<h2>Create</h2>

<h4>WarrantyDetail</h4>
<hr />
<div class="row">
    <div class="col-lg-6" style="margin:auto;">
        <div class="card">
        <form asp-action="Create">
            <div class="card-header">Thêm chi tiết bảo hành</div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="Date" class="col-md-3 form-control-label">Ngày</label>
                    <div class="col-md-9">
                        <input asp-for="@date" class="form-control"  readonly/>
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="DefectInfo" class="col-md-3 form-control-label">Thông tin lỗi</label>
                    <div class="col-md-9">
                        <input asp-for="DefectInfo" class="form-control" />
                        <span asp-validation-for="DefectInfo" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Status" class="col-md-3 form-control-label">Trạng thái</label>
                    <div class="col-md-9">
                        <select asp-for="Status" class="form-control" asp-items="@Html.GetEnumSelectList<WarrantyDetailStatus>()"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="WarrantyCardID" class="col-md-3 form-control-label">Mã bảo hành</label>
                    <div class="col-md-9">
                        <select asp-for="WarrantyCardID" class="form-control" asp-items="ViewBag.WarrantyCardID" ></select>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i> Tạo</button>
                @*<input type="submit" value="Create" class="btn btn-default" />*@
            </div>
        </form>
            </div>
    </div>
</div>

<div>
    <a asp-action="Index">
        <button type="button" class="btn btn-success"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
