                            <thead>
                            <th></th>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
               
                



            </div>
            
        </form>
           
            <div class="card-footer">
                @*<button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i> Tạo</button>*@
                @*<input type="submit" value="Create" class="btn btn-default" />*@
                <button class="btn btn-primary" id="buttonClick"><i class="fa fa-plus"></i> Tạo</button>
            </div>
            </div>
    </div>
</div>

<div>
    <a asp-action="Index">
        <button type="button" class="btn btn-success"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    $("#buttonClick").click(function () {
        if ($("#waCardID").val() == "")
        {
            alert("vui lòng nhập mã bảo hành");

        }
        else
        {

            $("#formCreate").submit();
        }
    });



     $(document).ready(function () {
        $("#onpendtable").mouseup(function () {
            $("#filtersearch").hide();
         });

    });

    function getValueForInputSearch(value) {
        $("#waCardID").val(value)
    };



    $("#waCardID").on("input", function () {

        $("#filtersearch").show();

        $.ajax({
            url: "StorageLocations",
            type: "POST",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            accept: 'application/json',
            success: function (data) {
                var arrtemp = [];
                var ar = data.split('","');

                //day la doan code bo  [" cho ar[0] va "] cho ar cuoi cung

                for (var i = 0; i < ar.length; i++)
                {
                    if (i == 0)
                    {
                        arrtemp.push(ar[0].substring(2, ar[0].length));

                    }
                    else if (i == ar.length - 1)
                    {
                        arrtemp.push(ar[i].substring(0, ar[i].length - 2));

                    }
                    else
                    {
                        arrtemp.push(ar[i]);

                    }

                }

                //tim ra  chuoi con voi chuoi con do duoc nhap trong truong textbox seach trong danh sach IMEI
                var arfind = [];
                for (var i = 0; i < arrtemp.length; i++)
                {
                    if (arrtemp[i].includes($("#waCardID").val()))
                    {

                        arfind.push(arrtemp[i]);
                    }

                }

                var rows = "";

                for (var i = 0; i < arfind.length; i++)
                {

                    rows += "<tr style='padding: 10px'>"
                    rows += `<td><a href='#' onClick='return getValueForInputSearch("${arfind[i]}")'>${arfind[i]} </a></td>`
                    rows +="</tr>"

                }

                $("#filtersearch tbody").html(rows);
            },
        });
    });


</script>