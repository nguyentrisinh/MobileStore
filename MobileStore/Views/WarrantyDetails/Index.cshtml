@model PaginatedList<MobileStore.Models.WarrantyDetail>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12" style="margin:auto">
        <div class="card">
            <div class="card-header">Danh sách Chi tiết Bảo Hành</div>
            @*<p>
                    <a asp-action="Create">Create New</a>
                </p>*@
            <div class="card-body">
                <form asp-controller="WarrantyDetails" asp-action="Index" method="get" class="form-horizontal">
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <div class="input-group">
                                <input class="form-control" style="margin-right:10px;" type="text" name="SearchString" value="@ViewData["CurrentFilter"]" placeholder="Tìm kiếm theo ID" />

                                <span class="input-group-btn">
                                    <input type="submit" value="Search" class="btn btn-primary" />
                                </span>
                            </div>

                        </div>
                    </div>
                </form>
                <p>
                    <a asp-action="Create">
                        <button type="button" class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;Thêm Chi Tiết Bảo Hành</button>
                    </a>
                </p>
                <div class="table-striped table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.Date)*@
                                    <a asp-action="Index" asp-route-sortOrder="@ViewData["DateStartSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]"> Ngày</a>
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.DefectInfo)*@
                                    Thông tin lỗi
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.Status)*@
                                    Trạng thái
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.WarrantyCard)*@
                                    Mã Bảo Hành
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date.Month) / @Html.DisplayFor(modelItem => item.Date.Day)/  @Html.DisplayFor(modelItem => item.Date.Year)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DefectInfo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.WarrantyCard.NumberOfWarranty)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.WarrantyDetailID">
                                            <button type="button" class="btn btn-warning btn-sm"><i class="fa fa-pencil-square-o"></i>&nbsp; Sửa</button>
                                        </a> |
                                        <a asp-action="Details" asp-route-id="@item.WarrantyDetailID">
                                            <button type="button" class="btn btn-primary btn-sm"><i class="fa fa-info"></i>&nbsp; Chi tiết</button>
                                        </a> |
                                        <a asp-action="Delete" asp-route-id="@item.WarrantyDetailID">
                                            <button type="button" class="btn btn-danger btn-sm"><i class="fa fa-trash-o"></i>&nbsp; Xóa</button>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @{
                        PaginatedList<MobileStore.Models.WarrantyDetail> PaginatedModel = Model as PaginatedList<MobileStore.Models.WarrantyDetail>;
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }

                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item @prevDisabled">
                                <a asp-action="Index"
                                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                                   asp-route-page="@(PaginatedModel.PageIndex - 1)"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   class="page-link">Previous</a>
                            </li>
                            @for (var i = 1; i <= PaginatedModel.TotalPages; i++)
                            {
                                <li class="page-item @( @PaginatedModel.PageIndex == i ? "active" : " " )">
                                    <a asp-action="Index"
                                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                                       asp-route-page="@i"
                                       asp-route-currentFilter="@ViewData["CurrentFilter"]" class="page-link">@(i)</a>
                                </li>

                            }
                            <li class="page-item @nextDisabled">
                                <a asp-action="Index"
                                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                                   asp-route-page="@(PaginatedModel.PageIndex + 1)"
                                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                                   class="page-link">Next</a>
                            </li>
                </div>

                </div>
            </div>
        </div>
    </div>
