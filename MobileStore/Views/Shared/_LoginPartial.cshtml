@using Microsoft.AspNetCore.Identity
@using MobileStore.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="nav navbar-nav ml-auto">
       
        <ul class="nav navbar-nav d-md-down-none">
            <li class="nav-item dropdown">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="nav-link dropdown-toggle nav-link" data-toggle="dropdown" data-target="#navbarNavDropdown" role="button" aria-haspopup="true" aria-expanded="true">
                    <img src="~/images/avatar.jpg" class="img-avatar" alt="@UserManager.GetUserName(User)">
                    <span class="d-md-down-none">@UserManager.GetUserName(User)</span>
                </a>
                <div id="navbarNavDropdown" class="dropdown-menu dropdown-menu-right">
                    <div class="nav-item px-3">
                        @*<a asp-controller="Manage" asp-action="ChangePassword"><button class="btn btn-link navbar-btn navbar-link">Change Password</button></a>*@
                            <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
                        
                    </div>
                </div>
            </li>

        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav ml-auto">
       
        <li class="nav-item px-3"><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li class="nav-item px-3"><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
