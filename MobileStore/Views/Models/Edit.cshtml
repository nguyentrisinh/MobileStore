@model MobileStore.Models.Model

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-lg-6" style="margin:auto;">
        <div class="card">
            <form asp-action="Edit">

                <div class="card-header">
                    <strong>Sửa Model</strong>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ModelID" />
                    <div class="form-group row">
                        <label asp-for="Name" class=" col-md-3 form-control-label">Tên Model</label>
                        <div class="col-md-9">
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên Model"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Color" class="col-md-3 form-control-label">màu sắc</label>
                        <div class="col-md-9">
                            <input asp-for="Color" class="form-control" placeholder="Nhập màu sắc"/>
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Description" class="col-md-3 form-control-label">Mô tả</label>
                        <div class="col-md-9">
                            <textarea rows="8" asp-for="Description" class="form-control" placeholder="Nhập mô tả..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Specification" class="col-md-3 form-control-label">Đặc điểm kỹ thuật</label>
                        <div class="col-md-9">
                            <input asp-for="Specification" class="form-control" placeholder="Nhập đặc điểm kỹ thuật"/>
                            <span asp-validation-for="Specification" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Type" class="col-md-3 form-control-label">Loại</label>
                        <div class="col-md-9">
                            <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<ModelType>()"></select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="BrandID" class="col-md-3 form-control-label">Nhãn Hiệu</label>
                        <div class="col-md-9">
                            <select asp-for="BrandID" class="form-control" asp-items="ViewBag.BrandID"></select>
                            <span asp-validation-for="BrandID" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> Sửa</button>
                    @*<input type="submit" value="Save" class="btn btn-default" />*@
                </div>
            </form>
            
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">
        <button type="button" class="btn btn-success"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
