@model MobileStore.Models.WarrantyCard

@{
    ViewData["Title"] = "Details";
}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
                <div class="card-header">
                    <strong>Sửa thông tin nhà cung cấp</strong>
                </div>
                <div class="card-body">

                    <div class="form-group row">
                        <label  class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Item.Name)</label>
                        <div class="col-md-8">
                            <div class="form-control">
                                @Model.Item.Name
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label  class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Item.IMEI)</label>
                        <div class="col-md-8">
                            <div class="form-control">
                                @Model.Item.IMEI
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label  class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Item.Model.Name)</label>
                        <div class="col-md-8">
                            <div class="form-control">
                                @Model.Item.Model.Name
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label  class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.StartDate)</label>
                        <div class="col-md-8">
                            <div class="form-control">
                                @Model.StartDate
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label  class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.EndDate)</label>
                        <div class="col-md-8">
                            <div class="form-control">
                                @Model.EndDate
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label  class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.NumberOfWarranty)</label>
                        <div class="col-md-8">
                            <div class="form-control">
                                @Model.NumberOfWarranty
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label  class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.WarrantyCardID)</label>
                        <div class="col-md-8">
                            <div class="form-control">
                                @Model.WarrantyCardID
                            </div>
                        </div>
                    </div>






                </div>
            <div class="card-footer">
                <div class="btn-group">
                    <form action="Print" method="post">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> In</button>
                    </form>
                    @{
                        if (Model.CanWarrant())
                        {
                            if (ViewBag["CanReturn"])
                            {
                                <a asp-controller="ReturnItems" asp-action="Create" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> Đổi trả</a>
                            }
                            else
                            {
                                <a asp-controller="WarrantyCards" asp-action="Index" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> Bảo hành</a>

                            }
                        }
                    }
                </div>
               


                @*<div class="form-group">
                            <input type="submit" value="Create" class="btn btn-default"/>
                        </div>*@

            </div>
        </div>
    </div>
</div>

<div>

    <a asp-action="Index"><button type="button" class="btn btn-success"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


