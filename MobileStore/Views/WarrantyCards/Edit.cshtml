@model MobileStore.Models.WarrantyCard
<script src="~/lib/jquery/dist/jquery.min.js"></script>
@{
    ViewData["Title"] = "Edit";
}

<h2 style="color:red">@ViewData["erro"]</h2>
<div class="row">
    <div class="col-lg-6" style="margin:auto">
        <div class="card" id="onpendtable">
            <form asp-action="Edit" id="formWarrantyCards">

                <div class="card-header">Sửa Bảo Hành</div>
                <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="WarrantyCardID" />
                <input type="hidden" asp-for="ApplicationUserID"/>
                <div class="form-group row">
                    <label asp-for="NumberOfWarranty" class="col-md-3 form-control-label">Số lần bảo hành</label>
                    <div class="col-md-9">
                        <input asp-for="NumberOfWarranty" class="form-control" readonly/>
                        <span asp-validation-for="NumberOfWarranty" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="StartDate" class="col-md-3 form-control-label">Ngày bắt đầu</label>
                    <div class="col-md-9">
                        @*<input asp-for="StartDate"  class="form-control" readonly id="StartDate" value="@Model.StartDate.ToShortDateString()"/>*@
                        <input type="text" class="form-control" readonly name="StartDate" id="StartDate" value="@Model.StartDate.ToShortDateString()" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="EndDate" class="col-md-3 form-control-label">Ngày kết thúc</label>
                    <div class="col-md-9">
                        @*<input asp-for="EndDate" class="form-control" readonly id="EndDate"/>*@
                        <input type="text" class="form-control" readonly id="EndDate" name="EndDate" value="@Model.EndDate.ToShortDateString()"/>
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Period" class="col-md-3 form-control-label">Thời lượng bảo hành(tháng)</label>
                    <div class="col-md-9">
                        <input asp-for="Period" class="form-control" id="eventChange" />
                        <span asp-validation-for="Period" class="text-danger"></span>
                    </div>
                </div>
                @*<div class="form-group row" hidden>
                    <label asp-for="ItemID" class="col-md-3 form-control-label">IMEI</label>
                    <div class="col-md-9">
                        <select asp-for="ItemID" class="form-control" asp-items="ViewBag.ItemIDOld"></select>
                        <span asp-validation-for="ItemID" class="text-danger"></span>
                    </div>
                </div>*@
                    
                    <div class="form-group row">
                        <label asp-for="ItemID" class="col-md-3 form-control-label">IMEI</label>
                        <div class="col-md-9">
                            <input style="position:relative" name="ItemID" value="@ViewData["ItemIDNew"]" id="ItemID" class="form-control" placeholder="Nhập IMEM" />
                            <table id="filtersearch" style="position:absolute; background-color:white; z-index:1">
                                <thead>
                                <th></th>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
            </form>
            <div class="card-footer">
                @*<button type="submit" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> Sửa</button>*@
                @*<input type="submit" value="Save" class="btn btn-default" />*@
                <button class="btn btn-primary" onclick="clickButton()"><i class="fa fa-plus"></i> Sửa</button>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">
        <button type="button" class="btn btn-success"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">

    $("#eventChange").on("input", function () {
        //ngay thang nam bat dau lay tren truong input
        var star = new Date($("#StartDate").val());

        //ngay thang nam ket thuc lay tren truong input
        var end = new Date($("#EndDate").val());

        //period lay tren truong input
        var period = parseInt($("#eventChange").val());


        var endAgainDate = star.getDate();
        var endAgainMounth = star.getMonth() +1;
        var endAgainYear = star.getFullYear();


        if ($("#eventChange").val() != "")
        {
            endAgainMounth = endAgainMounth + period;
        }

        while (endAgainMounth>12)
        {
            endAgainYear = endAgainYear + 1;
            endAgainMounth = endAgainMounth - 12;
        }

        var da = endAgainMounth + "/" + endAgainDate + "/"  + endAgainYear;

        $("#EndDate").val(da);

    });


    function clickButton() {

        if ($("#ItemID").val() == "") {
            alert("vui lòng nhập IMEM của sản phẩm");

        }
        else {
            $("#formWarrantyCards").submit();
        }  

    }




    $(document).ready(function () {
        $("#onpendtable").mouseup(function () {
            $("#filtersearch").hide();
        });

    });

    function getValueForInputSearch(value) {
        $("#ItemID").val(value)
    };



    $("#ItemID").on("input", function () {

        $("#filtersearch").show();

        $.ajax({
            url: "/WarrantyCards/StorageLocations",
            type: "POST",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            accept: 'application/json',
            success: function (data) {
                var arrtemp = [];
                var ar = data.split('","');

                //day la doan code bo  [" cho ar[0] va "] cho ar cuoi cung

                for (var i = 0; i < ar.length; i++) {
                    if (i == 0) {
                        arrtemp.push(ar[0].substring(2, ar[0].length));

                    }
                    else if (i == ar.length - 1) {
                        arrtemp.push(ar[i].substring(0, ar[i].length - 2));

                    }
                    else {
                        arrtemp.push(ar[i]);

                    }

                }

                //tim ra  chuoi con voi chuoi con do duoc nhap trong truong textbox seach trong danh sach IMEI
                var arfind = [];
                for (var i = 0; i < arrtemp.length; i++) {
                    if (arrtemp[i].includes($("#ItemID").val())) {

                        arfind.push(arrtemp[i]);
                    }

                }

                var rows = "";

                for (var i = 0; i < arfind.length; i++) {

                    rows += "<tr style='padding: 10px'>"
                    rows += `<td><a href='#' onClick='return getValueForInputSearch("${arfind[i]}")'>${arfind[i]} </a></td>`
                    rows += "</tr>"

                }

                $("#filtersearch tbody").html(rows);
            },
        });
    });

</script>