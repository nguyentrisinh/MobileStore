@model MobileStore.Models.WarrantyCard

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-lg-6" style="margin:auto">
        <div class="card">
            <form asp-action="Edit" id="formWarrantyCards">

                <div class="card-header">Sửa Bảo Hành</div>
                <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="WarrantyCardID" />
                <div class="form-group row">
                    <label asp-for="NumberOfWarranty" class="col-md-3 form-control-label">Mã bảo hành</label>
                    <div class="col-md-9">
                        <input asp-for="NumberOfWarranty" class="form-control" />
                        <span asp-validation-for="NumberOfWarranty" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="StartDate" class="col-md-3 form-control-label" >Ngày bắt đầu</label>
                    <div class="col-md-9">
                        <input asp-for="StartDate" class="form-control" id="StartDate"/>
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="EndDate" class="col-md-3 form-control-label">Ngày kết thúc</label>
                    <div class="col-md-9">
                        <input asp-for="EndDate" class="form-control" id="EndDate"/>
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Period" class="col-md-3 form-control-label">Giai đoạn bảo hành</label>
                    <div class="col-md-9">
                        <input asp-for="Period" class="form-control" />
                        <span asp-validation-for="Period" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ItemID" class="col-md-3 form-control-label">Tên sản phẩm</label>
                    <div class="col-md-9">
                        <select asp-for="ItemID" class="form-control" asp-items="ViewBag.ItemID"></select>
                        <span asp-validation-for="ItemID" class="text-danger"></span>
                    </div>
                </div>
                </div>
                
            </form>
            <div class="card-footer">
                @*<button type="submit" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> Sửa</button>*@
                @*<input type="submit" value="Save" class="btn btn-default" />*@
                <button class="btn btn-primary" onclick="clickButton()"><i class="fa fa-plus"></i> Sửa</button>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">
        <button type="button" class="btn btn-success"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    function clickButton() {
        if ((new Date($("#StartDate").val())).getTime() >= (new Date($("#EndDate").val()).getTime())) {
            alert("nhap ngay ket thuc lon hon ngay bat dau");
        }
        else {

            $("#formWarrantyCards").submit();
        }

    }
</script>