@model IEnumerable<MobileStore.Models.SoldItems>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="jumbotron-heading">Thống kê hàng hóa đã bán </h4>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                        Dropdown Example
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#">T</a></li>
                        <li><a href="#">CSS</a></li>
                        <li><a href="#">JavaScript</a></li>
                    </ul>
                </div>
                <div class="table-striped table-responsive">
                    <h6>Tổng</h6>
                    <div class="table-striped table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <td>SL đã bán</td>
                                    <td>Tổng giá mua</td>
                                    <td>Tổng giá bán</td>
                                    <td>Tổng giá bán thực</td>
                                    <td>Tổng chênh lệch</td>
                                    <td>Tổng doanh thu</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@ViewData["TotalNumberSold"]</td>
                                    <td>@ViewData["TotalPriceBought"]</td>
                                    <td>@ViewData["TotalPriceSold"]</td>
                                    <td>@ViewData["TotalActualPriceSold"]</td>
                                    <td>@ViewData["TotalDiffInPrice"]</td>
                                    <td>@ViewData["TotalRevenue"]</td>
                                </tr>
                            </tbody>
                        </table>

                        <h6>Chi tiết</h6>
                        <form asp-action="Index" method="get" class="form-horizontal">
                            <div class="form-group row">
                                <div class="col-lg-6">
                                    <div class="input-group">
                                        <span class="input-group-btn">
                                            <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Search</button>
                                        </span>
                                        <input name="sortOrder" hidden value="@ViewData["CurrentSort"]" type="text" class="form-control">
                                        <input name="SearchString" value="@ViewData["CurrentFilter"]" type="text" class="form-control" placeholder="Tìm kiếm theo tên sản phẩm...">
                                    </div>
                                </div>
                            </div>
                        </form>
                        <table class="table">
                            <thead>
                                <tr>
                                    @*<th>
                                        @Html.DisplayNameFor(item => item.ModelFromSupplierID)
                                    </th>*@
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                                            @Html.DisplayNameFor(item => item.Name)
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NumberSoldSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                                            @Html.DisplayNameFor(item => item.NumberSold)
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceBoughtSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                                            @Html.DisplayNameFor(item => item.PriceBought)
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSoldSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                                            @Html.DisplayNameFor(item => item.PriceSold)
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["ActualPriceSoldParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                                            @Html.DisplayNameFor(item => item.ActualPriceSold)
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DiffInPriceSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                                            @Html.DisplayNameFor(item => item.DiffInPrice)
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["RevenueSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                                            @Html.DisplayNameFor(item => item.Revenue)
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["TotalRevenueSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]">
                                            @Html.DisplayNameFor(item => item.TotalRevenue)
                                        </a>
                                    </th>
                                    <th>
                                        <a>
                                            @Html.DisplayNameFor(item => item.SupplierName)
                                        </a>
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                    {
                                        <tr>
                                            @*<td>
                                                @Html.DisplayFor(modelItem => item.ModelFromSupplierID)
                                            </td>*@
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NumberSold)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PriceBought)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PriceSold)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ActualPriceSold)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DiffInPrice)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Revenue)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalRevenue)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SupplierName)
                                            </td>
                                            @*<td>
                                                <div class="btn-group">
                                                    <a class="btn btn-primary btn-sm" asp-action="Detail" asp-route-id="@item.ItemID">
                                                        <i class="fa fa-info"></i>&nbsp; Chi tiết
                                                    </a>
                                                </div>
                                            </td>*@
                                        </tr>
                                    }
                                    <tr>
                                </tbody>
                            </table>
                        </div>


