@model MobileStore.Models.Order

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-8">
        <div class="card">
            <div class="card-header">
                <strong>Xóa hóa đơn</strong>
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="OrderID"/>
                <div class="form-group row">
                    <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Total)</label>
                    <div class="col-md-8">
                        <div class="form-control">@Model.Total</div>
                        <span asp-validation-for="Total" class="invalid-feedback"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="CustomerID" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.CustomerID)</label>
                    <div class="col-md-8">

                        <div class="form-control">@Model.Customer.Name</div>
                        @*<input asp-for="ModelFromSupplier.SupplierID" type="text" class="form-control" placeholder="Chọn nhà cung cấp..">*@
                        <span asp-validation-for="CustomerID" class="invalid-feedback"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer">

                <form asp-action="Delete">
                    <input type="hidden" asp-for="OrderID"/>
                    <button type="submit" class="btn btn-danger"> <i class="fa fa-trash-o"></i> Tiếp tục xóa? </button>
                </form>

            </div>
        </div>
    </div>



</div>
<p>
    <a asp-action="Detail" asp-route-id="@Model.OrderID"><button type="button" class="btn btn-primary"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button></a>
</p>
