@model MobileStore.Models.Brand

@{
    ViewData["Title"] = "Edit";
}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <strong>Thông tin nhãn hiệu</strong>
            </div>

            <div class="card-body">

                    
                <div class="form-group row">
                    <label class="col-md-3 form-control-label">Tên nhãn hiệu</label>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Model.Name
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 form-control-label">Nơi xuất xứ</label>
                    <div class="col-md-9">
                        <div class="form-control">
                            @Model.Country
                        </div>
                            
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-3 form-control-label">Mô tả</label>
                    <div class="col-md-9">
                        <div class="form-control" >
                            @Model.Description &nbsp;
                        </div>
                            
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input asp-for="BrandID" hidden />
                    <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o"></i> Tiếp tục xóa?</button>
                </form>
               
                @*<input type="submit" value="Save" class="btn btn-default" />*@
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index"><button type="button" class="btn btn-primary"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}