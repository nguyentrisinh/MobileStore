@model MobileStore.Models.Brand

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Bạn có chắc muốn xóa nhãn hiệu này?</h3>
<div>
    <h4>Brand</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên nhãn hiệu
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
           Nơi sản xuất
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>
