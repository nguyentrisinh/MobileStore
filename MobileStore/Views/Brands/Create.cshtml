@model MobileStore.Models.Brand

@{
    ViewData["Title"] = "Create";
}
<div class="row" >
    <div class="col-lg-8">
        <div class="card">
            <form asp-action="Create">
                <div class="card-header">
                    <strong>Thêm nhãn hiệu</strong>
                </div>

                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="Name" class="col-md-3 form-control-label">Tên nhãn hiệu</label>
                        <div class="col-md-9">
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên nhãn hiệu..."/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Country" class="col-md-3 form-control-label">Xuất xứ</label>
                        <div class="col-md-9">
                            <input asp-for="Country" class="form-control" placeholder="Nhập nơi xuất sứ..."/>
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Description" class="col-md-3 form-control-label">Mô tả</label>
                        <div class="col-md-9">
                            <textarea rows="8" asp-for="Description" class="form-control" placeholder="Nhập mô tả về nhãn hiệu..." ></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success"><i class="fa fa-plus"></i> Tạo</button>
                    @*<input type="submit" value="Create" class="btn btn-default" />*@
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index"><button type="button" class="btn btn-primary"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
