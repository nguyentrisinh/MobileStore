@model MobileStore.Models.Supplier
@using MobileStore.Models
@*@using System.Collections.Generic.IEnumerable<MobileStore.Models.Supplier.SupplierStatus>*@
@*@model IEnumerable<MobileStore.Models.Supplier.SupplierStatus>*@

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class=" col-lg-8">
        <div class="card">
            <form asp-action="Create">
                <div class="card-header">
                    <strong>Thêm nhà cung cấp</strong>
                </div>
                <div class="card-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="Name" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Name)</label>
                        <div class="col-md-8">
                            <input asp-for="Name" type="text" class="form-control" placeholder="Nhập @Html.DisplayNameFor(model => model.Name)...">
                            <span asp-validation-for="Name" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Address" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Address)</label>
                        <div class="col-md-8">
                            <textarea asp-for="Address" rows="8" class="form-control" placeholder="Nhập @Html.DisplayNameFor(model => model.Address)..."></textarea>
                            <span asp-validation-for="Address" class="invalid-feedback"></span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label asp-for="Phone" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Phone)</label>
                        <div class="col-md-8">
                            <input asp-for="Phone" type="text" class="form-control" placeholder="Nhập @Html.DisplayNameFor(model => model.Phone)...">
                            <span asp-validation-for="Phone" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Email" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Email)</label>
                        <div class="col-md-8">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Nhập @Html.DisplayNameFor(model => model.Email)...">
                            <span asp-validation-for="Email" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Code" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Code)</label>
                        <div class="col-md-8">
                            <input asp-for="Code" type="text" class="form-control" placeholder="Nhập @Html.DisplayNameFor(model => model.Code)...">
                            <span asp-validation-for="Code" class="invalid-feedback"></span>
                        </div>
                    </div>


                    <div class="form-group row">
                        <label class="col-md-4 form-control-label" for="select">@Html.DisplayNameFor(model => model.Status)</label>
                        <div class="col-md-8">
                            <select class="form-control" asp-for="Status" asp-items="Html.GetEnumSelectList<SupplierStatus>()"></select>

                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="PicName" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.PicName)</label>
                        <div class="col-md-8">
                            <input asp-for="PicName" type="text" class="form-control" placeholder="Nhập @Html.DisplayNameFor(model => model.PicName)...">
                            <span asp-validation-for="PicName" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="PicPhone" class="col-md-4 form-control-label">SĐT @Html.DisplayNameFor(model => model.PicPhone)</label>
                        <div class="col-md-8">
                            <input asp-for="PicPhone" type="text" class="form-control" placeholder="Nhập @Html.DisplayNameFor(model => model.PicPhone)...">
                            <span asp-validation-for="PicPhone" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="PicEmail" class="col-md-4 form-control-label">Email @Html.DisplayNameFor(model => model.PicEmail)</label>
                        <div class="col-md-8">
                            <input asp-for="PicEmail" type="text" class="form-control" placeholder="Nhập @Html.DisplayNameFor(model => model.PicEmail)...">
                            <span asp-validation-for="PicEmail" class="invalid-feedback"></span>
                        </div>
                    </div>






                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i> Tạo</button>
                    @*<div class="form-group">
                            <input type="submit" value="Create" class="btn btn-default"/>
                        </div>*@
                </div>
            </form>
        </div>
    </div>
</div>

<div>

    <a asp-action="Index"><button type="button" class="btn btn-success"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
