@model MobileStore.Models.Supplier

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <form asp-action="Edit">
                <div class="card-header">
                    <strong>Sửa thông tin nhà cung cấp</strong>
                </div>
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <input type="hidden" asp-for="SupplierID" />

                    <div class="form-group row">
                        <label asp-for="Name" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Name)</label>
                        <div class="col-md-8">
                            <input asp-for="Name" type="text" class="form-control" placeholder="Nhập @Html.DisplayFor(model=>model.Name) ...">
                            <span asp-validation-for="Name" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Address" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Address)</label>
                        <div class="col-md-8">
                            <input asp-for="Address" type="text" class="form-control" placeholder="Nhập @Html.DisplayFor(model=>model.Address) ...">
                            <span asp-validation-for="Address" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Phone" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Phone)</label>
                        <div class="col-md-8">
                            <input asp-for="Phone" type="text" class="form-control" placeholder="Nhập @Html.DisplayFor(model=>model.Phone) ...">
                            <span asp-validation-for="Phone" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Email" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Email)</label>
                        <div class="col-md-8">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Nhập @Html.DisplayFor(model=>model.Email) ...">
                            <span asp-validation-for="Email" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Code" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Code)</label>
                        <div class="col-md-8">
                            <input asp-for="Code" type="text" class="form-control" placeholder="Nhập @Html.DisplayFor(model=>model.Code) ...">
                            <span asp-validation-for="Code" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-4 form-control-label" for="select">@Html.DisplayNameFor(model => model.Status)</label>
                        <div class="col-md-8">
                            <select class="form-control" asp-for="Status" asp-items="Html.GetEnumSelectList<SupplierStatus>()">
                                @*<option selected="selected" value="">Chọn trạng thái</option>*@
                            </select>

                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="PicName" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.PicName)</label>
                        <div class="col-md-8">
                            <input asp-for="PicName" type="text" class="form-control" placeholder="Nhập @Html.DisplayFor(model=>model.PicName) ...">
                            <span asp-validation-for="PicName" class="invalid-feedback"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PicPhone" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.PicPhone)</label>
                        <div class="col-md-8">
                            <input asp-for="PicPhone" type="text" class="form-control" placeholder="Nhập @Html.DisplayFor(model=>model.PicPhone) ...">
                            <span asp-validation-for="PicPhone" class="invalid-feedback"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PicEmail" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.PicEmail)</label>
                        <div class="col-md-8">
                            <input asp-for="PicEmail" type="email" class="form-control" placeholder="Nhập @Html.DisplayFor(model=>model.PicEmail) ...">
                            <span asp-validation-for="PicEmail" class="invalid-feedback"></span>
                        </div>
                    </div>






                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> Sửa</button>
                    @*<div class="form-group">
                            <input type="submit" value="Create" class="btn btn-default"/>
                        </div>*@

                </div>
            </form>
        </div>
    </div>
</div>

<div>

    <a asp-action="Index"><button type="button" class="btn btn-success"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
