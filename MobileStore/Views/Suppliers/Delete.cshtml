@model MobileStore.Models.Supplier

@{
    ViewData["Title"] = "Xóa nhà cung cấp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <strong>Xóa nhà cung cấp</strong>
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <label asp-for="Name" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Name)</label>
                    <div class="col-md-8">
                        <div type="text" class="form-control">
                            @Model.Name
                        </div>

                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Address)</label>
                    <div class="col-md-8">
                        <div type="text" class="form-control">
                            @Model.Address
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Phone)</label>
                    <div class="col-md-8">
                        <div type="text" class="form-control">
                            @Model.Phone
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Email)</label>
                    <div class="col-md-8">
                        <div type="text" class="form-control">
                            @Model.Email
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Code)</label>
                    <div class="col-md-8">
                        <div type="text" class="form-control">
                            @Model.Code
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.Status)</label>
                    <div class="col-md-8">
                        <div type="text" class="form-control">
                            @Model.Status
                        </div>

                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.PicName)</label>
                    <div class="col-md-8">
                        <div type="text" class="form-control">
                            @Model.PicName
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.PicPhone)</label>
                    <div class="col-md-8">
                        <div type="text" class="form-control">
                            @Model.PicPhone
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="PicEmail" class="col-md-4 form-control-label">@Html.DisplayNameFor(model => model.PicEmail)</label>
                    <div class="col-md-8">
                        <div type="text" class="form-control">
                            @Model.PicEmail
                        </div>
                    </div>
                </div>






            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input hidden asp-for="SupplierID"/>
                    <button type="submit" class="btn btn-danger"><i class="fa fa-trash-o"></i> Tiếp tục xóa?</button>
                </form>
            </div>
        </div>
    </div>primary
</div>

<div>

    <a asp-action="Index"><button type="button" class="btn btn-primary"><i class="fa fa-angle-left"></i>&nbsp; Trở về</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
