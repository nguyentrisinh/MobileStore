@model IEnumerable<MobileStore.Models.ReturnItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ReturnDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DefectInfo)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OldItem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefectInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewItem.ItemID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OldItem.ItemID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReturnItemID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ReturnItemID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ReturnItemID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
